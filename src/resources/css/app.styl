$dark = #002358
$light = #cee1ff
$main = #111
$dark = #000

*
    font-family: 'Montserrat', sans-serif;
    
.hero--light .hero__title
    color: $dark;
    font-family: 'Russo One', sans-serif !important;
.navbar-nav .nav-link
    display: flex;
    align-items: center;
    padding: 13px 15px 15px;
    font-size: 1rem;
    font-weight: 700;
    color: #a2c3f5;
    letter-spacing: .025em;
    text-decoration: none;
    transition: color .1s ease-out;
    color: #fff !important;
    
.thead__cell
    min-height: 70px;
    align-items: center;
    color: #214a88;
    color: $main
    font-size: .7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: .1em;
    line-height: 1;
    text-decoration: none;
    padding: 9px 4px;
    white-space: nowrap;
    min-height: 0;
    border-bottom: 1px solid rgba(35, 39, 52, 0.1);
.super-options
    margin: 1.6rem 0
    display flex
    align-items: center
    justify-content: flex-end
.super-select
    width: auto
    display: block;
    padding: 0.375rem 2.25rem 0.375rem 0.75rem;
    line-height: 1.5;
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%23ffffff' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M2 5l6 6 6-6'/%3e%3c/svg%3e");
    background-repeat: no-repeat;
    background-position: right 0.75rem center;
    background-size: 16px 12px;
    border: 1px solid #ced4da;
    transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    background-color: $dark;
    border: 0;
    font-weight: 600;
    font-size: .9rem;
    color: #fff;
.coins_table
    min-height: 400px
    margin-bottom: 4rem;
.table
    .table__cell
        padding: 12px 4px 9px;
        min-height: 60px;
        align-items: center;
        border-bottom: 1px solid rgba(35, 39, 52, 0.1);
        & > div
            min-height: 42px
            display: flex
            align-items: center
    .coin_info-rank
        color: $main
        font-size: .9rem;
        font-weight: 700;
        min-width: 28px;
        padding-right: 5px;
        flex-shrink: 0;
    .coin_info-logo
        display: flex;
        align-items: center;
        justify-content: center;
        margin: -2px 10px 0 0;
        flex-shrink: 0;
        height: 32px;
        width: 32px;
        background-color: #fff;
        border: 3px solid #fff;
        border-radius: 40px;
    .coin_info-name
        color: $main
        display: flex;
        flex-direction: column
    .coin_info-link
        color $dark;
        font-weight: 600
        text-decoration: none
    .coin_info-subtitle
        display: block;
        color: $main;
        font-size: .8rem;
        letter-spacing: .03em;
        line-height: 1.4;
        font-weight: 500;
        margin: 1px 0 0;
.flex
    display flex !important;

.coin_info
    display: flex;
    align-items: center;
.table > :not(:first-child)
    border: 0 !important;
.valuta
    color $dark
    font-size: 1rem;
    font-weight: 700;
    letter-spacing: .025em;
    line-height: 1.2;
    white-space: nowrap;
.change
    display: flex;
    position: relative
.change-value
    font-size: .9rem;
    font-weight: 700;
    letter-spacing: .025em;
    line-height: 1.2;
    white-space: nowrap;
    margin-right: 1rem
    color: #00b053
    &.change-value-negative-1
        color: #eb0a25
.title
    margin-bottom: 1rem
    color: $main
    font-size: 2rem;
    font-weight: 400
    font-family: 'Russo One', sans-serif !important;
    letter-spacing: 1px
.stats__description
    font-size: .9rem;
    font-family: Montserrat,Helvetica,Arial,sans-serif;
    line-height: 1.6;
    margin-bottom: 0;
    color: $main;
.ps
    font-family: 'Press Start 2P', cursive !important;
.ro
    font-family: 'Russo One', sans-serif !important;
    letter-spacing: 2px
.flex-end
    align-items: flex-end
.container-fluid
    max-width: 1800px




























